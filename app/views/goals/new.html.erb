<h1>Create Goal</h1>
<% if !@errors.nil? %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>
<form action="<%= goals_url %>" method="post">
  <%= send_auth_token %>

  <label>Body
    <input type="string" name="goal[body]" value="<%= @goal.body %>">
  </label>

  <label>Status:

    <label>Private
      <input
        type="radio"
        name="goal[status]"
        value="Private"
        <%= "checked" if @goal.status == "private" %> >
    </label>

    <label>Public
      <input
        type="radio"
        name="goal[status]"
        value="Public"
        <%= "checked" if @goal.status == "Public" %> >
    </label>

  </label>

  <button>Submit Goal</button>

</form>
